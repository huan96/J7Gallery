<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/layout_select_all"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.galaxy.gallery.j7gallery.until.SmoothCheckBox
            android:id="@+id/checkbox_select_all"
            app:stroke_width="1dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:color_checked="@color/colorOrange"
            android:background="@color/colorBackground"
            android:padding="4dp"
            app:duration="200" />

        <com.galaxy.gallery.j7gallery.fonts.CustomTextViewClock2017
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select All"
            android:textColor="@color/colorText"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_select_item"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/layout_select_all"
        android:gravity="center"
        android:text="@string/select_item"
        android:textColor="@color/colorText"
        android:textSize="25sp" />

    <com.galaxy.gallery.j7gallery.fonts.CustomTextViewClock2017Bold
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Delete"
        android:textAllCaps="true"
        android:textColor="@color/colorOrange"
        android:textSize="18sp"
        android:visibility="gone" />

    <com.galaxy.gallery.j7gallery.fonts.CustomTextViewClock2017Bold
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/btn_delete"
        android:gravity="center"
        android:padding="8dp"
        android:text="Share"
        android:textAllCaps="true"
        android:textColor="@color/colorOrange"
        android:textSize="18sp"
        android:visibility="gone" />
</RelativeLayout>